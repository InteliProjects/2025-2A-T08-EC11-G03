generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Keep your AnimalMetadata model if you still want it
model AnimalMetadata {
  id            Int      @id @default(autoincrement())
  device_id     String   @unique
  // ... other fields
  @@map("animal_metadata")
}


